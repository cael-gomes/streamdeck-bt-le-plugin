{
    "type": "commonjs",
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart com.cael-gomes.bt-controller\"",
        "start:debug": "node --inspect-brk=9229 ./com.cael-gomes.bt-controller.sdPlugin/bin/plugin.js",
        "start:debug:alt": "node --inspect=9230 ./com.cael-gomes.bt-controller.sdPlugin/bin/plugin.js",
        "clean": "rm -rf com.cael-gomes.bt-controller.sdPlugin/bin com.cael-gomes.bt-controller.sdPlugin/node_modules",
        "rebuild": "npm run clean && npm run build"
    },
    "devDependencies": {
        "@elgato/cli": "^1.4.0",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/node": "~20.15.0",
        "rollup": "^4.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@elgato/streamdeck": "^1.0.0",
        "@stoprocent/noble": "^2.3.1"
    }
}
