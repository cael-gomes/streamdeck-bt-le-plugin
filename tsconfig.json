{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES2022",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}